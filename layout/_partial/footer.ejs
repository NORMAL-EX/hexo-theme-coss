<footer class="border-t bg-background">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8" style="background: var(--card);">
    <div class="flex flex-col items-center justify-center gap-2 py-6">
      <%# Copyright %>
      <p class="text-sm text-muted-foreground text-center">
        <% if (theme.footer && theme.footer.copyright) { %>
          <%= theme.footer.copyright %>
        <% } else { %>
          Â© <%= new Date().getFullYear() %> <%= config.author %>. All rights reserved.
        <% } %>
      </p>

      <%# Beian %>
      <% if (theme.footer && theme.footer.beian) { %>
      <a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener noreferrer" class="text-xs text-muted-foreground hover:text-foreground">
        <%= theme.footer.beian %>
      </a>
      <% } %>

      <%# Powered by %>
      <% if (!theme.footer || theme.footer.powered !== false) { %>
      <p class="text-xs text-muted-foreground text-center">
        Powered by
        <a href="https://hexo.io" target="_blank" rel="noopener noreferrer" class="underline hover:text-foreground">Hexo</a>
        &
        <a href="https://github.com/NORMAL-EX/hexo-theme-coss" target="_blank" rel="noopener noreferrer" class="underline hover:text-foreground">Theme Coss</a>
      </p>
      <% } %>
    </div>
  </div>
</footer>
