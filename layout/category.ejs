<div class="py-8">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <%# Main Content %>
      <div class="flex-1">
        <%# Page Title - 靠左对齐 %>
        <h1 class="text-3xl font-bold mb-2 text-left">
          <% if (page.category) { %>
          分类: <%= page.category %>
          <% } else { %>
          分类
          <% } %>
        </h1>
        <p class="text-muted-foreground mb-8 text-left">
          <% if (page.category) { %>
          共 <%= page.posts.length %> 篇文章
          <% } else { %>
          共 <%= site.categories.length %> 个分类
          <% } %>
        </p>

        <% if (page.category) { %>
        <%# Posts in Category %>
        <div class="grid grid-cols-1 gap-6">
          <% page.posts.each(function(post) { %>
          <article class="hoverable-card rounded-xl border bg-card text-card-foreground shadow overflow-hidden transition-shadow">
            <% if (post.cover) { %>
            <a href="<%= url_for(post.path) %>" class="block">
              <div class="aspect-video overflow-hidden">
                <img src="<%= post.cover %>" alt="<%= post.title %>" class="w-full h-full object-cover transition-transform hover:scale-105">
              </div>
            </a>
            <% } %>

            <div class="p-6">
              <h2 class="text-xl font-semibold mb-3 text-left">
                <a href="<%= url_for(post.path) %>" class="hover:text-primary transition-colors hover:underline underline-offset-4">
                  <%= post.title %>
                </a>
              </h2>

              <div class="flex flex-wrap items-center gap-4 text-sm text-muted-foreground mb-3">
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M8 2v4"></path>
                    <path d="M16 2v4"></path>
                    <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                    <path d="M3 10h18"></path>
                  </svg>
                  <time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD') %></time>
                </span>
              </div>

              <% if (post.excerpt) { %>
              <p class="text-muted-foreground text-sm line-clamp-3 text-left"><%- strip_html(post.excerpt) %></p>
              <% } %>
            </div>
          </article>
          <% }); %>
        </div>

        <%# Pagination %>
        <%- partial('_partial/pagination') %>

        <% } else { %>
        <%# All Categories %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <% site.categories.sort('name').each(function(category) { %>
          <a href="<%= url_for(category.path) %>" class="clickable-card rounded-xl border bg-card text-card-foreground shadow p-6 transition-shadow group">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground group-hover:text-primary transition-colors">
                  <path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"></path>
                </svg>
                <span class="font-medium group-hover:text-primary transition-colors"><%= category.name %></span>
              </div>
              <span class="text-sm text-muted-foreground"><%= category.posts.length %> 篇</span>
            </div>
          </a>
          <% }); %>
        </div>
        <% } %>
      </div>

      <%# Sidebar - only show if there's content %>
      <%
        var showAuthor = !theme.sidebar || theme.sidebar.showAuthor !== false;
        var showCategories = (!theme.sidebar || theme.sidebar.showCategories !== false) && site.categories.length > 0;
        var showTags = (!theme.sidebar || theme.sidebar.showTags !== false) && site.tags.length > 0;
        var showRecent = !theme.sidebar || theme.sidebar.showRecent !== false;
        var hasSidebarContent = showAuthor || showCategories || showTags || showRecent;
      %>
      <% if (hasSidebarContent) { %>
      <div class="w-full lg:w-80 shrink-0">
        <%- partial('_partial/sidebar') %>
      </div>
      <% } %>
    </div>
  </div>
</div>
