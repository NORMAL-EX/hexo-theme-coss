<%# Hero Section - 第一屏 %>
<section id="hero" class="min-h-screen flex flex-col justify-center relative -mt-16">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex items-end gap-8 pl-4 sm:pl-8 lg:pl-12">
      <%# 左侧：标题、副标题、社交链接 %>
      <div class="flex-1 max-w-3xl">
        <%# 主标题 - 支持 gradient-highlight %>
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-4 text-left leading-tight"><%-
          (theme.index && theme.index.title ? theme.index.title : '最新文章')
            .replace(/\{\{highlight\}\}(.*?)\{\{\/highlight\}\}/g, '<span class="gradient-highlight">$1</span>')
        %></h1>

        <%# 副标题 %>
        <% if (theme.index && theme.index.subtitle) { %>
        <p class="text-xl sm:text-2xl text-muted-foreground mb-8 text-left"><%-
          theme.index.subtitle
            .replace(/\{\{highlight\}\}(.*?)\{\{\/highlight\}\}/g, '<span class="gradient-highlight">$1</span>')
        %></p>
        <% } else { %>
        <p class="text-xl sm:text-2xl text-muted-foreground mb-8 text-left">分享技术、生活与思考</p>
        <% } %>

        <%# 社交链接 %>
        <% if (theme.social && theme.social.length > 0) { %>
        <div class="flex items-center gap-4">
          <% for (var i = 0; i < theme.social.length; i++) { %>
            <% var item = theme.social[i]; %>
            <a href="<%= item.url %>" target="_blank" rel="noopener noreferrer" class="text-muted-foreground hover:text-foreground transition-colors" title="<%= item.name %>">
              <% if (item.icon === 'github') { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
              </svg>
              <% } else if (item.icon === 'twitter') { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
              </svg>
              <% } else if (item.icon === 'email' || item.icon === 'mail') { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
              <% } else if (item.icon === 'rss') { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 11a9 9 0 0 1 9 9"></path>
                <path d="M4 4a16 16 0 0 1 16 16"></path>
                <circle cx="5" cy="19" r="1"></circle>
              </svg>
              <% } else { %>
              <span class="text-sm font-medium"><%= item.name %></span>
              <% } %>
            </a>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <%# 向下滚动按钮 - 底部居中 Coss UI outline button style %>
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <button id="scroll-to-posts" class="inline-flex items-center justify-center size-10 rounded-full border bg-background shadow-lg animate-bounce transition-all hover:bg-accent hover:text-accent-foreground dark:bg-input/30 dark:border-input dark:hover:bg-input/50 outline-none focus-visible:ring-ring/50 focus-visible:ring-[3px] cursor-pointer text-muted-foreground" aria-label="向下滚动">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m6 9 6 6 6-6"></path>
      </svg>
    </button>
  </div>
</section>

<%# 文章列表区域 %>
<section id="posts" class="py-16">
  <div class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <%# Main Content %>
      <div class="flex-1">
        <%# Post List %>
        <% if (page.posts.length > 0) { %>
        <div class="grid grid-cols-1 gap-6">
          <% page.posts.each(function(post) { %>
          <article class="hoverable-card rounded-xl border bg-card text-card-foreground shadow overflow-hidden">
            <%# Cover Image %>
            <% if (post.cover) { %>
            <a href="<%= url_for(post.path) %>" class="block">
              <div class="aspect-video overflow-hidden">
                <img src="<%= post.cover %>" alt="<%= post.title %>" class="w-full h-full object-cover transition-transform hover:scale-105">
              </div>
            </a>
            <% } %>

            <div class="p-6">
              <%# Sticky Badge %>
              <% if (post.sticky) { %>
              <div class="flex items-center gap-1 text-sm text-orange-500 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 17v5"></path>
                  <path d="M9 10.76a2 2 0 0 1-1.11 1.79l-1.78.9A2 2 0 0 0 5 15.24V16a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-.76a2 2 0 0 0-1.11-1.79l-1.78-.9A2 2 0 0 1 15 10.76V7a1 1 0 0 1 1-1 2 2 0 0 0 0-4H8a2 2 0 0 0 0 4 1 1 0 0 1 1 1z"></path>
                </svg>
                <span>置顶</span>
              </div>
              <% } %>

              <%# Title - 靠左对齐 %>
              <h2 class="text-xl font-semibold mb-3 text-left">
                <a href="<%= url_for(post.path) %>" class="hover:text-primary transition-colors">
                  <%= post.title %>
                </a>
              </h2>

              <%# Meta Info %>
              <div class="flex flex-wrap items-center gap-4 text-sm text-muted-foreground mb-3">
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M8 2v4"></path>
                    <path d="M16 2v4"></path>
                    <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                    <path d="M3 10h18"></path>
                  </svg>
                  <time datetime="<%= date_xml(post.date) %>"><%= date(post.date, 'YYYY-MM-DD') %></time>
                </span>

                <% if (post.categories && post.categories.length > 0) { %>
                <span class="flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"></path>
                  </svg>
                  <% post.categories.each(function(cat, idx) { %>
                    <a href="<%= url_for(cat.path) %>" class="hover:text-foreground"><%= cat.name %></a><% if (idx < post.categories.length - 1) { %>, <% } %>
                  <% }); %>
                </span>
                <% } %>
              </div>

              <%# Excerpt %>
              <% var excerptText = post.excerpt ? strip_html(post.excerpt) : (post.content ? strip_html(truncate(post.content, {length: 200})) : ''); %>
              <% if (excerptText && excerptText.trim()) { %>
              <p class="text-muted-foreground text-sm line-clamp-2 mb-4 text-left"><%- excerptText %></p>
              <% } %>

              <%# Tags %>
              <% if (post.tags && post.tags.length > 0) { %>
              <div class="flex flex-wrap gap-2">
                <% post.tags.each(function(tag) { %>
                <a href="<%= url_for(tag.path) %>" class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors hover:bg-accent">
                  <%= tag.name %>
                </a>
                <% }); %>
              </div>
              <% } %>
            </div>
          </article>
          <% }); %>
        </div>

        <%# Pagination %>
        <%- partial('_partial/pagination') %>

        <% } else { %>
        <div class="text-center py-12 text-muted-foreground">
          暂无文章
        </div>
        <% } %>
      </div>

      <%# Sidebar - only show if there's content %>
      <%
        var showAuthor = !theme.sidebar || theme.sidebar.showAuthor !== false;
        var showCategories = (!theme.sidebar || theme.sidebar.showCategories !== false) && site.categories.length > 0;
        var showTags = (!theme.sidebar || theme.sidebar.showTags !== false) && site.tags.length > 0;
        var showRecent = !theme.sidebar || theme.sidebar.showRecent !== false;
        var hasSidebarContent = showAuthor || showCategories || showTags || showRecent;
      %>
      <% if (hasSidebarContent) { %>
      <div class="w-full lg:w-80 shrink-0">
        <%- partial('_partial/sidebar') %>
      </div>
      <% } %>
    </div>
  </div>
</section>
